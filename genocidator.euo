sub moveTo
while ! ( ABS ( #charPosX - %1 ) <= %3 && ABS ( #charPosY - %2 ) <= %3 ) || %5 <> N/A
{
   if #charPosX = %6 && #charPosY = %7 && %5 = N/A
   {
      set %8 %1 - #charPosX
      set %9 %2 - #charPosY
      if %8 > 0
         set %10 #charPosX + 3
      if %8 < 0
         set %10 #charPosX - 3
      if %8 = 0
         set %10 #charPosX
      if %9 > 0
         set %11 #charPosY + 3
      if %9 < 0
         set %11 #charPosY - 3
      if %9 = 0
         set %11 #charPosY
      event pathFind %10 %11
   }
   if ! ( ABS ( #charPosX - %1 ) <= %3 && ABS ( #charPosY - %2 ) <= %3 ) && %1 <> 0 && %2 <> 0
   {
      set %6 #charPosX
      set %7 #charPosY
      move %1 %2 %3 %4
   }
   if %5 <> N/A
   {
      findItem %5 G
      if #findX <> 0 && #findY <> 0
      {
         set %1 #findX
         set %2 #findY
      }
   }
   if %5 <> N/A && #findCnt = 0
   {
      set %5 N/A
   }
}
goSub cleanSub
return #findID

